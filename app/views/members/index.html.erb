<%= form_tag members_path, :method => 'get' do %>
  <p>
  <%= label_tag t('.find_by_lastname') %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag t(".search"), :name => nil, :class => 'button' %>
  </p>
<% end %>
<p>
<%= link_to t('.new_member'), new_member_path, :class => 'button' %>
</p>

<%= render 'list', :checked_all => false %>
