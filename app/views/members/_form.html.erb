<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :last_name %><br/>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :given_names %><br/>
    <%= f.text_field :given_names %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %><br/>
    <%= date_select :member, :date_of_birth %>
  </div>
  <div class="field">
    <%= f.label :address %><br/>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :phone %><br/>
    <%= f.phone_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
    <div class="field">
      <%= f.label :card_number %><br/>
      <%= f.text_field :card_number %>
    </div>
  <div class="field">
    <%= f.label 'Does application exist?' %><br/>
    <%= f.check_box :application_exists %>
  </div>
  <div class="field">
    <%= f.label :joined %><br/>
    <%= f.check_box :joined %>
  </div>
  <div id="joined_member_fields" style="display: <%= @member.joined ? '':'none' %>">
    <div class="field">
      <%= f.label :join_date %><br/>
      <%= date_select :member, :join_date, :include_blank => true %>
    </div>
    <div class="field">
      <%= f.label :join_protocol %><br/>
      <%= f.text_field :join_protocol %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
